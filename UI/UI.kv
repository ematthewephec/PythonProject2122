#:kivy 1.0.9


<UI>:
    title: 'InputDialog'
    auto_dismiss: False
    id: main

    RelativeLayout:
        orientation: 'vertical'
        pos: self.pos
        size: root.size
        id: sub

        TextInput:
            id: input
            hint_text:'Entrer votre commande désiré'
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            size_hint: 0.95, 0.2
            on_text: app.process()

        MDLabel:
            id: result_label
            text:'...'
            text_color: 0, 0, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            size_hint: 0.95, 0.2

        Image:
            source: 'UI/ephecLogo.png'
            pos_hint: {'center_x': 0.125, 'center_y': 0.9}

        Button:
            id: confirmbutton
            text: 'Ok'
            focus: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            size_hint: 0.1, 0.1
            on_press : app.outputtext()
